<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="theme-color" content="#0d0d0d">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/favicon.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet" />
  <title>Admin - Withdrawals</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>


  <!-- small creen nav  -->
    <%- include ('partials/admin-nav') %>



  <div class="payments" id="admin-home">
    <h1>REFERAL PAYOUTS</h1>

    <div style="margin-bottom: 20px;">
      <div class="platform-buttons">
      <a href="/admin/payments" class="platform-btn">Pending Payments</a>
      <a href="/admin/claims" class="platform-btn">Shop Payouts</a>
      <a href="/admin/withdrawals" class="platform-btn">Referal Payouts</a>
    </div>


      <div class="payment-contain">
        <% if (withdrawals && withdrawals.length > 0) { %>
          <% withdrawals.filter(w => w.status === 'pending').forEach(w => { %>
            <div class="payment">
              <div style="display: flex; justify-content: space-between; align-items: center;">
                <span class="payment-id">Withdrawal <br> #<%= w._id %></span>
                <span class="payment-status">
                  <%= w.status.charAt(0).toUpperCase() + w.status.slice(1) %>
                </span>
              </div>
              <hr style="margin: 10px 0;">
              <p><strong>User:</strong>
                <%= w.user.phone %> (<%= w.user.referral %>)
              </p>
              <p><strong>Type:</strong>
                <%= w.type %>
              </p>
              <p><strong>Amount:</strong> â‚¦<%= w.amount.toLocaleString() %>
              </p>
              <p><strong>Bank Name:</strong>
                <%= w.bankDetails?.bankName || '-' %>
              </p>
              <p><strong>Account Name:</strong>
                <%= w.bankDetails?.accountName || '-' %>
              </p>
              <p><strong>Account Number:</strong>
                <%= w.bankDetails?.accountNumber || '-' %>
              </p>
              <p><strong>Requested At:</strong>
                <%= w.createdAt.toLocaleString() %>
              </p>
              <div style="margin-top: 12px; display: flex; gap: 10px;">
                <% if (w.status === 'pending') { %>
                  <form action="/admin/withdrawals/<%= w._id %>/approve" method="POST" style="display:inline;">
                    <button type="submit" name="action" value="approve" class="approve-btn">Approve</button>
                  </form>
                  <!-- <form action="/admin/withdrawals/<%= w._id %>/reject" method="POST" style="display:inline;">
                    <button type="submit" name="action" value="reject" class="reject-btn">Reject</button>
                  </form> -->
                <% } %>
              </div>
            </div>
          <% }); %>
          <% if (withdrawals.filter(w => w.status === 'pending').length === 0) { %>
            <p class="fallback-message">No pending withdrawals found.</p>
          <% } %>
        <% } else { %>
          <p class="fallback-message">No withdrawals found.</p>
        <% } %>
      </div>
    </div>

  </div>
</body>

</html>